{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "%stanza/*": ["../stanza/*"],
      "%api/*": ["../api/src/*"],
      "%core/*": ["../core/src/*"],
      "%storybook/*": ["../storybook/src/*"],
      "%web/*": ["../web/src/*"]
    }
  },
  "include": [
    "vite.config.ts"
  ]
}
