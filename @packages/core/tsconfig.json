{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noResolve": false,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "noEmit": false,
    "noEmitHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "%stanza/*": ["../stanza/*"],
      "%api/*": ["../api/src/*"],
      "%core/*": ["../core/src/*"],
      "%storybook/*": ["../storybook/src/*"],
    }
  }
}
